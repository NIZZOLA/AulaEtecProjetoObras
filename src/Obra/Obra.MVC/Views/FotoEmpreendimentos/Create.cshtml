@model Obra.Domain.Models.FotoEmpreendimentoModel

@await Html.PartialAsync("~/Views/Shared/HeaderPartial.cshtml")
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpreendimentoId" class="control-label"></label>
                <select asp-for="EmpreendimentoId" class ="form-control" asp-items="ViewBag.EmpreendimentoId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Insira o seu anexo</label>
                <input type="file" name="anexo" />
            </div>


            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
