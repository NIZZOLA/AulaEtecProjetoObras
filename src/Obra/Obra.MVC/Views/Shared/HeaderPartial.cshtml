@{
    ViewData["Title"] = ViewBag.ControllerName + " " + ViewBag.ActionName;
}
<h1>
<i class="@ViewBag.ControllerIcon"></i>
@ViewBag.ControllerName
</h1>

<h2>
<i class="@ViewBag.ActionIcon"></i>
@ViewBag.ActionName
</h2>

@if(ViewBag.ActionName=="Exclusão") {
    <h3>Você quer realmente excluir este registro ?</h3>
}

@if(ViewBag.ActionName=="Consulta geral" && ViewBag.ShowCreate == true ) {
    <p>
        <a asp-action="Create"><i class="fa-solid fa-plus"></i> Novo</a>
    </p>
}