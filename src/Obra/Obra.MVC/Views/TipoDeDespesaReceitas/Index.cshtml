@model IEnumerable<Obra.Domain.Models.TipoDeDespesaReceitaModel>

@await Html.PartialAsync("~/Views/Shared/HeaderPartial.cshtml")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Despesa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Despesa)
            </td>
            <td>
                @await Html.PartialAsync("~/Views/Shared/IndexTableButtonsPartial.cshtml", item.Id)
            </td>
        </tr>
}
    </tbody>
</table>
